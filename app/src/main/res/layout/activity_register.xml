<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_fondo">

    <LinearLayout
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Crear cuenta"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/azul_oscuro"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Correo electr칩nico"
            android:background="@drawable/rounded_input"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Contrase침a"
            android:inputType="textPassword"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_input"
            android:maxLines="1"
            android:padding="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/checkTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_and_conditions" />

            <TextView
                android:id="@+id/textMoreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(m치s informaci칩n)"
                android:textColor="@color/azul_medio"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Registrar"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/azul_medio"
            android:textColor="@color/blanco" />

    </LinearLayout>

</ScrollView>

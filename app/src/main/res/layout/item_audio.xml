    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/superficie_card"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/bg_boton_circular"
        android:backgroundTint="@color/boton_principal"
        android:src="@android:drawable/ic_media_play"
        app:tint="@color/texto_on_dark" /> <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_marginStart="14dp">

    <TextView
        android:id="@+id/txtNombreAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/texto_principal"
        android:textSize="14sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:singleLine="false"
        android:maxLines="2" /> <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="GrabaciÃ³n de emergencia"
    android:textColor="@color/texto_secundario"
    android:textSize="12sp"
    android:layout_marginTop="2dp" /> </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@android:drawable/ic_menu_directions"
        app:tint="@color/texto_desactivado"
        android:layout_marginStart="8dp"/>

</LinearLayout>
</androidx.cardview.widget.CardView>
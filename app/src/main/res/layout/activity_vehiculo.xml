<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_principal">

    <LinearLayout
        android:orientation="vertical"
        android:padding="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtVehiculoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos del Vehículo"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/texto_principal"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/editModelo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Modelo"
            android:textColor="@color/texto_principal"
            android:textColorHint="@color/texto_secundario"
            android:background="@drawable/rounded_input"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editVin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="VIN"
            android:layout_marginTop="15dp"
            android:textColor="@color/texto_principal"
            android:textColorHint="@color/texto_secundario"
            android:background="@drawable/rounded_input"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editPlaca"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Placa"
            android:layout_marginTop="15dp"
            android:textColor="@color/texto_principal"
            android:textColorHint="@color/texto_secundario"
            android:background="@drawable/rounded_input"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Año/fecha del vehículo"
            android:textSize="16sp"
            android:textColor="@color/texto_principal"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/editFechaVehiculo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Seleccionar fecha (YYYY-MM-DD)"
            android:layout_marginTop="8dp"
            android:textColor="@color/texto_principal"
            android:textColorHint="@color/texto_secundario"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:focusable="false"
            android:clickable="true"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="8dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="¿El vehículo es propio?"
                android:textSize="16sp"
                android:textColor="@color/texto_principal" />

            <Switch
                android:id="@+id/switchVehiculoPropio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="@color/boton_principal"
                android:trackTint="@color/texto_secundario" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de vehículo"
            android:textSize="16sp"
            android:textColor="@color/texto_principal"
            android:layout_marginTop="20dp" />

        <Spinner
            android:id="@+id/spinnerTipoVehiculo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_input"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicio requerido"
            android:textSize="16sp"
            android:textColor="@color/texto_principal"
            android:layout_marginTop="20dp" />

        <Spinner
            android:id="@+id/spinnerServicio"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_input"
            android:padding="8dp" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Guardar vehículo"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/boton_principal"
            android:textColor="@color/texto_on_dark"
            app:cornerRadius="8dp" />

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".HomeActivity"
    android:background="@color/azul_medio">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        tools:text="Hola usuario, bienvenido." />

    <ImageButton
        android:id="@+id/download_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="85dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Descargar conversación"
        android:src="@android:drawable/stat_sys_download"
        android:tint="@color/white" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="-8dp"
        android:text="Enviar"
        android:textColor="@color/ambar" />

    <ImageButton
        android:id="@+id/voice_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/send_button"
        android:src="@android:drawable/ic_btn_speak_now"
        android:background="@color/black"
        android:contentDescription="Entrada por voz" />

    <EditText
        android:id="@+id/prompt_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/voice_button"
        android:background="@color/black"
        android:hint="Escribe tu texto aquí"
        android:textColorHint="@color/ambar"
        android:textColor="@color/ambar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/prompt_input"
        android:layout_below="@id/welcomeText"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:background="@color/black">

        <TextView
            android:id="@+id/gemini_response_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="8dp"
            android:textColor="@color/ambar"
            android:textSize="16sp"
            tools:text="Respuesta de Gemini aquí." />

    </ScrollView>

</RelativeLayout>
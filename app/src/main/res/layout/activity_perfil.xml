<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_principal"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/profileViewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/profile_header_gradient">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileImage"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile_placeholder"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    app:strokeColor="@color/blanco"
                    android:padding="4dp"
                    app:strokeWidth="3dp"
                    android:contentDescription="Foto de perfil" />

                <ImageButton
                    android:id="@+id/btnEditPhoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@id/profileImage"
                    android:layout_alignEnd="@id/profileImage"
                    android:layout_marginEnd="-8dp"
                    android:layout_marginBottom="-8dp"
                    android:background="@drawable/edit_photo_button_background"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="@color/texto_principal"
                    android:contentDescription="Editar foto"
                    android:padding="8dp" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/superficie_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Información Personal"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/texto_principal"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_myplaces"
                            app:tint="@color/acento_ambar"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Icono nombre" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre Completo"
                                android:textSize="12sp"
                                android:textColor="@color/texto_secundario" />

                            <TextView
                                android:id="@+id/nombreText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/texto_principal"
                                android:textStyle="bold"
                                tools:text="Juan Pérez González" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_today"
                            app:tint="@color/acento_ambar"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Icono fecha" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fecha de Nacimiento"
                                android:textSize="12sp"
                                android:textColor="@color/texto_secundario" />

                            <TextView
                                android:id="@+id/fechaText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/texto_principal"
                                tools:text="1990-01-15" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/stat_sys_phone_call"
                            app:tint="@color/acento_ambar"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Icono teléfono" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Teléfono"
                                android:textSize="12sp"
                                android:textColor="@color/texto_secundario" />

                            <TextView
                                android:id="@+id/telefonoText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/texto_principal"
                                tools:text="555-1234-5678" />
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnEditar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Editar Perfil"
                        android:backgroundTint="@color/boton_principal"
                        android:textColor="@color/texto_on_dark"
                        app:cornerRadius="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/superficie_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mis Vehículos"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/texto_principal"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/vehiclesContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <Button
                        android:id="@+id/btnAddVehiculo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Añadir Vehículo"
                        android:backgroundTint="@color/acento_ambar"
                        android:textColor="@color/texto_principal"
                        app:cornerRadius="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/profileFormContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone"
            tools:visibility="gone">

            <TextView
                android:id="@+id/formTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/texto_principal"
                android:layout_marginBottom="16dp"
                tools:text="Crear Perfil" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Nombre"
                app:boxBackgroundColor="@color/superficie_card"
                app:hintTextColor="@color/acento_ambar">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nombreInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/texto_principal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Apellido Paterno"
                app:boxBackgroundColor="@color/superficie_card"
                app:hintTextColor="@color/acento_ambar">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/apellidoPatInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/texto_principal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Apellido Materno"
                app:boxBackgroundColor="@color/superficie_card"
                app:hintTextColor="@color/acento_ambar">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/apellidoMatInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/texto_principal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Fecha Nacimiento (YYYY-MM-DD)"
                app:boxBackgroundColor="@color/superficie_card"
                app:hintTextColor="@color/acento_ambar">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fechaInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/texto_principal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Teléfono"
                app:boxBackgroundColor="@color/superficie_card"
                app:hintTextColor="@color/acento_ambar">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/telefonoInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/texto_principal" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Guardar"
                android:backgroundTint="@color/boton_principal"
                android:textColor="@color/texto_on_dark"
                app:cornerRadius="8dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_fondo">

    <LinearLayout
        android:orientation="vertical"
        android:padding="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Datos Personales"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/azul_oscuro"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/editNombre"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nombre"
            android:background="@drawable/rounded_input"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editApellidoP"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Apellido paterno"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_input"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editApellidoM"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Apellido materno"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_input"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editFecha"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Fecha de nacimiento (YYYY-MM-DD)"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_input"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editTelefono"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="TelÃ©fono"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_input"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Guardar y continuar"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/azul_medio"
            android:textColor="@color/blanco" />

    </LinearLayout>

</ScrollView>
